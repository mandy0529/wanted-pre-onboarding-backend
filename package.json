{
  "name": "wanted-pre-onboarding-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon src/server.js",
    "pretest:all":"dotenv -e .env.test -- prisma migrate reset",
    "test:all": "dotenv -e .env.test -- mocha src/tests/*",
    
    "prisma:dev:deploy": "prisma migrate deploy",
    "db:dev:rm": "docker compose rm dev-db -s -f -v",
    "db:dev:up": "docker compose up dev-db -d",
    "db:dev:restart": "yarn db:dev:rm && yarn db:dev:up && sleep 1 && yarn prisma:dev:deploy",
    
    "prisma:test:deploy": "dotenv -e .env.test -- prisma migrate dev",
    "db:test:rm": "docker compose rm test-db -s -f -v",
    "db:test:up": "docker compose up test-db -d",
    "db:test:restart": "yarn db:test:rm && yarn db:test:up && sleep 1 && yarn prisma:test:deploy"
  },
  "type": "module",
  "dependencies": {
    "@prisma/client": "4.10.1",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "mysql2": "^3.5.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.2.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.2.0",
    "mocha": "^10.2.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "prisma": "4.10.1",
    "supertest": "^6.3.3",
    "validator": "^13.9.0",
    "xss-clean": "^0.1.4"
  }
}
